@model IEnumerable<UdemyNLayerProject.Data.DTOs.Categories.CategoryDto>
@{
    ViewData["Title"] = "Index";
}




    <h1 class="">Kategoriler</h1>

    <a class="btn btn-primary mb-3 mt-3" asp-action="Create">Kategori ekle</a>
   
    <h3>Kategori Listesi</h3>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <div style="display:flex;">
                            <a style="margin-right:5px;" class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                            <a style="margin-right:5px;" class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>